{
	"QMainWindow":[
		{
			"tittle":"Nayan's Inventory Management System",
			"icon":"Images/App-Icon.ico",
			"frameless": true,
			"transluscentBg": true,
			"sizeGrip": "sizeGrip",
			"navigation":[
				{
					"minimize":"minimizeWindowsBtn",
					"close": "closeWindowsBtn",
					"restore":[
						{	
							"buttonName": "restoreWindowsBtn",
							"normalIcon": ":/Icons/Icons/square.svg",
							"maximizedIcon": ":/Icons/Icons/copy.svg"
					
						}
					],
					"moveWindow": "headerContainer",
					"tittleBar": "headerContainer"
				}
			]
		}
	],
	"QCustomSlideMenu": [
		{
			"name": "leftMenuContainer",
			"defaultSize": [{
				"width": 43,
				"height": "parent"
			}],
			"collapsedSize": [{
				"width": 43,
				"height": "parent"
			}],
			"expandedSize": [{
				"width": 200,
				"height": "parent"
			}],
			"toggleButton": [{
				"buttonName": "menuBtn",
				"icons": [{
					"whenMenuIsCollapsed": ":/Icons/Icons/align-justify.svg",
					"whenMenuIsExpanded": ":/Icons/Icons/chevron-left.svg"
				}]
			}],
			"menuTransitionAnimation": [{
				"animationDuration": 350,
				"animationEasingCurve": "Linear"
			}]
		},
		{
			"name": "centerMenuContainer",
			"defaultSize": [{
				"width": 0,
				"height": "parent"
			}],
			"collapsedSize": [{
				"width": 0,
				"height": "parent"
			}],
			"expandedSize": [{
				"width": 300,
				"height": "parent"
			}],
			"menuTransitionAnimation": [{
				"animationDuration": 350,
				"animationEasingCurve": "Linear"
			}]
		},
		{
			"name": "rightMenuContainer",
			"defaultSize": [{
				"width": 0,
				"height": "auto"
			}],
			"collapsedSize": [{
				"width": 0,
				"height": "auto"
			}],
			"expandedSize": [{
				"width": 300,
				"height": "auto"
			}],
			"menuTransitionAnimation": [{
				"animationDuration": 350,
				"animationEasingCurve": "Linear"
			}]
		},
		{
			"name": "popupNotificationContainer",
			"defaultSize": [{
				"width": 0,
				"height": "auto"
			}],
			"collapsedSize": [{
				"width": 0,
				"height": "auto"
			}],
			"expandedSize": [{
				"width": 700,
				"height": 150
			}],
			"menuTransitionAnimation": [{
				"animationDuration": 200,
				"animationEasingCurve": "Linear"
			}],
			"floatPosition": [
				{
					"relativeTo": "centralwidget",
					"position": "center-center",
					"shadow":[
						{
							"color": "#000",
							"blurRadius": 20,
							"xOffset": 0,
							"yOffset": 0
						}
					]
				}
			],
			"toggleButton": [{
				"buttonName": "notificationBtn"
			}]

		}
	],
	"QStackedWidget":[
		{
			"name":"mainPages",
			"navigation":[
				{
					"navigationButtons":[
						{
							"homeBtn": "homePage",
							"adminDashBtn":"adminDashPage",
							"serverInvBtn": "serverInvPage",
							"inUseInvBtn": "inUseInvPage",
							"sentForRepairBtn": "sentForRepairPage"
						}
					]
				}
			]
		},
		
			
			
		{
			"name":"centerMenuPages",
			"navigation":[
				{
					"navigationButtons":[
						{
							"settingsBtn": "settingsPage",
							"informationBtn": "informationPage",
							"helpMenuBtn": "helpMenuPage"
						}
					]
				}
			]
	
		},
		{
			"name":"rightMenuPages",
			"navigation":[
				{
					"navigationButtons":[
						{
							"profileMenuBtn": "profilePage",
							"moreMenuBtn": "moreMenuPage"
							
						}
					]
				}
			]
	
		}
	],
	"QPushButtonGroup": [
		{
			"Buttons": [
				"homeBtn",
				"adminDashBtn",
				"serverInvBtn",
				"inUseInvBtn",
				"sentForRepairBtn"
			],
			"Style":[{
				"Active": "background-color: qlineargradient(spread:pad,  x1:0 y1:0, x2:1 y2:0, stop:0 rgba(184,20,27,1), stop:1 rgba(44,49,60,1))",
				"NotActive":""
			}]
		},
		{
			"Buttons": [
				"settingsBtn",
				"informationBtn",
				"helpMenuBtn"
			],
			"Style":[{
				"Active": "background-color: #2c313c",
				"NotActive":""
			}]
		}

	]
}